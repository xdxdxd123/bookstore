/* 分类导航 */
.classify{
	width:210px;
	height:390px;
	background-color:#367462;
	overflow:hidden;
}
.classify-child{
	padding:12px 0 20px 20px;
}
.classify-child:hover{
	background-color:#2b5d4f;
}
.classify-child a{
	display:block;
	float:left;
	margin-right:11px;
	margin-top:12px;
	color:#fff;
	line-height:12px;
}
.classify-title{
	line-height:14px;
}
.classify-child a:hover{
	text-decoration:underline;
}
/* 焦点图 */
.focusWrap{
	width:698px;
	height:378px;
	margin:12px 0 0 12px;
	overflow:hidden;
}
/* 新闻、专场 */
.special{
	width:232px;
	margin-top:12px;
}
.newsInfo{
	height:142px;
	padding:12px 12px 0;
	background-color:#f6f6f6;
}
.newsInfo-title{
	line-height:14px;
	padding-bottom:8px;
	border-bottom:1px dotted #333;
}
.newsInfo-list li{
	width:200px;
	margin-top:12px;
	list-style-type:disc;
	list-style-position:inside;
	line-height:12px;
	color:#999;
}
.newsInfo-list a{
	color:#666;
}
.newsInfo-list a:hover{
	text-decoration:underline;
}
